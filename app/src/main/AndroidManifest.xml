<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.theplaybook">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="ThePlayBook"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ThePlayBook"
        android:usesCleartextTraffic="true">

        <!-- Schermata di login principale -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ThePlayBook.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Dashboard principale -->
        <activity
            android:name=".ui.dashboard.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.ThePlayBook.NoActionBar" />

        <!-- Applicazione personalizzata -->
        <meta-data
            android:name="com.example.theplaybook.ThePlayBookApp"
            android:value="true" />

    </application>

</manifest>