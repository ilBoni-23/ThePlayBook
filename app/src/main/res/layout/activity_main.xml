<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <!-- Sfondo con gradient in alto -->
    <View
        android:id="@+id/gradientBackground"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@drawable/gradient_top_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Logo e titolo -->
    <LinearLayout
        android:id="@+id/logoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ® ThePlayBook"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvSlogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutte le tue statistiche su un'unica app"
            android:textColor="@color/light_gray"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    <!-- Card di login -->
    <androidx.cardview.widget.CardView
        android:id="@+id/loginCard"
        android:layout_width="0dp"
        android:layout_height="420dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:cardCornerRadius="48dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="@color/card_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Titolo LOGIN -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="32dp"/>

            <!-- Campo Username (per Demo) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username Demo:"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etDemoUsername"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_border"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:padding="16dp"
                android:text="DemoPlayer123"
                android:enabled="true"/>

            <!-- Spazio -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp"/>

            <!-- Bottone Steam Login -->
            <Button
                android:id="@+id/btnSteamLogin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Simula Login Steam"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:background="@drawable/button_steam_background"
                android:drawableStart="@drawable/ic_steam"
                android:drawablePadding="12dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"/>

            <!-- Status Text -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Premi un pulsante per iniziare"
                android:textColor="@color/blue_accent"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:lineSpacingExtra="4dp"/>

            <!-- Bottone ModalitÃ  Demo -->
            <Button
                android:id="@+id/btnDemoMode"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ModalitÃ  Demo"
                android:textColor="@color/blue_accent"
                android:textSize="16sp"
                android:backgroundTint="@android:color/transparent"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>