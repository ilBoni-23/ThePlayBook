<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="30dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Icona gioco -->
        <ImageView
            android:id="@+id/ivGameIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_default_game_cover"
            android:contentDescription="Game icon"
            android:background="@color/white"
            android:alpha="0.8"
            android:padding="8dp"
            android:layout_marginEnd="16dp"
            android:clipToOutline="true"/>

        <!-- Info gioco -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nome e indicatori -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvGameName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Game Name"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontStyle="italic"/>

                <!-- Indicatore installato -->
                <TextView
                    android:id="@+id/tvInstalledIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INSTALLATO"
                    android:textColor="@color/success_green"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="@drawable/badge_background_common"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <!-- Descrizione -->
            <TextView
                android:id="@+id/tvGameDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game description"
                android:textColor="@color/white"
                android:alpha="0.8"
                android:textSize="12sp"
                android:fontStyle="italic"/>

            <!-- Ore di gioco -->
            <TextView
                android:id="@+id/tvPlaytime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0h played"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>

            <!-- Progress bar completamento -->
            <ProgressBar
                android:id="@+id/progressCompletion"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:progress="65"
                android:progressTint="@color/gold"
                android:progressBackgroundTint="@color/light_gray"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>