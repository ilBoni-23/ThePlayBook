<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/card_background">

    <!-- Titolo evento (OBBLIGATORIO) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titolo *"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/etEventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Es: Uscita GTA VI, Sessione gaming..."
        android:textColor="@color/white"
        android:textColorHint="@color/text_hint"
        android:backgroundTint="@color/white"
        android:maxLines="1"/>

    <!-- Data (OBBLIGATORIA) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data *"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"/>

    <Button
        android:id="@+id/btnStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleziona data *"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue_accent"/>

    <!-- Ora (FACOLTATIVA) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ora (facoltativa)"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"/>

    <Button
        android:id="@+id/btnStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ora (facoltativa)"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue_accent"/>

    <!-- Tipo evento -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo evento"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"/>

    <RadioGroup
        android:id="@+id/rgEventType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbGaming"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gaming"
            android:textColor="@color/white"
            android:buttonTint="@color/white"/>

        <RadioButton
            android:id="@+id/rbPersonal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Personale"
            android:textColor="@color/white"
            android:buttonTint="@color/white"/>
    </RadioGroup>

    <!-- Sezione gioco (solo per gaming) -->
    <LinearLayout
        android:id="@+id/layoutGamingOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gioco (facoltativo)"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spinnerGames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:popupBackground="@color/card_background"
            android:backgroundTint="@color/white"/>
    </LinearLayout>

    <!-- Descrizione (FACOLTATIVA) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrizione (facoltativa)"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/etNotes"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Note aggiuntive..."
        android:gravity="top"
        android:textColor="@color/white"
        android:textColorHint="@color/text_hint"
        android:backgroundTint="@color/white"
        android:inputType="textMultiLine"/>

    <!-- Bottoni -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Annulla"
            android:textColor="@color/white"
            android:backgroundTint="@color/error_red"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Salva"
            android:textColor="@color/white"
            android:backgroundTint="@color/success_green"/>
    </LinearLayout>

</LinearLayout>