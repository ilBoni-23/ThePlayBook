<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@drawable/gradient_header_blue"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/button_circle_background"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="@string/back"
                android:padding="12dp"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I TUOI GIOCHI"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Barra ricerca -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    android:tint="@color/blue_accent"/>

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Cerca gioco..."
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gray"
                    android:background="@android:color/transparent"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:imeOptions="actionSearch"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Contatore -->
    <TextView
        android:id="@+id/tvGamesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 GIOCHI"
        android:textColor="@color/blue_accent"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Lista giochi -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGiochi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:padding="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tvGamesCount"
        app:layout_constraintBottom_toTopOf="@id/bottomNavLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom Navigation (simile a Dashboard) -->
    <RelativeLayout
        android:id="@+id/bottomNavLayout"
        android:layout_width="0dp"
        android:layout_height="165dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Parte curva blu -->
        <View
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/bottom_nav_background"
            android:layout_alignParentBottom="true"/>

        <!-- Parte curva nera centrale -->
        <View
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:background="@drawable/bottom_nav_center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>

        <!-- Icona Home (sinistra) -->
        <LinearLayout
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:focusable="true">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_home"
                android:background="@android:color/transparent"
                android:contentDescription="@string/menu_home"
                android:rotation="-60"/>

            <!-- Indicatore -->
            <View
                android:id="@+id/indicatorHome"
                android:layout_width="40dp"
                android:layout_height="3dp"
                android:background="@color/white"
                android:layout_marginTop="4dp"
                android:visibility="invisible"/>

        </LinearLayout>

        <!-- Icona Giochi (centro) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/btnGames"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_joystick"
                android:background="@android:color/transparent"
                android:contentDescription="@string/menu_games"/>

            <!-- Indicatore attivo -->
            <View
                android:id="@+id/indicatorGames"
                android:layout_width="40dp"
                android:layout_height="3dp"
                android:background="@color/white"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

        <!-- Icona Calendario (destra) -->
        <LinearLayout
            android:id="@+id/btnCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:focusable="true">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_calendar"
                android:background="@android:color/transparent"
                android:contentDescription="@string/menu_calendar"
                android:rotation="60"/>

            <!-- Indicatore -->
            <View
                android:id="@+id/indicatorCalendar"
                android:layout_width="40dp"
                android:layout_height="3dp"
                android:background="@color/white"
                android:layout_marginTop="4dp"
                android:visibility="invisible"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>